extends base.pug
block scripts
  script(src='/static/index.js')

block style 
    style
      include ../static/style.css 
      include ../static/stylecontact.css

block content 
    h1 Contact Us 
    div.container 
        form(action="/contact", method = "post" Class = "form")
            input(type="text", Class = "inp",name = "name" placeholder = "Enter your name")
            input(type="phone", Class = "inp",name = "phone"     placeholder = "Enter your phone number")
            input(type="email", Class = "inp",name = "email"     placeholder = "Enter your email id")
            input(type="text", Class = "inp",name = "address"     placeholder = "Enter your address")
            input(type="text", Class = "inp",name = "desc"     placeholder = "Enter your concern")
            button(Class = "btn")
                | Submit
    

